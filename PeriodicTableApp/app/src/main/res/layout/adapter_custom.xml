<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_image"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="@+id/id_image"
        app:layout_constraintStart_toEndOf="@+id/id_image"
        app:layout_constraintTop_toTopOf="@+id/id_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/id_atomic_number"
        android:layout_width="125dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:text="atomic Number"
        app:layout_constraintBottom_toBottomOf="@+id/id_image"
        app:layout_constraintStart_toEndOf="@+id/id_image"
        app:layout_constraintTop_toBottomOf="@+id/id_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/id_symbol"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginStart="140dp"
        android:gravity="center_horizontal"
        android:text="S"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_image"
        app:layout_constraintStart_toEndOf="@+id/id_image"
        app:layout_constraintTop_toTopOf="@+id/id_image"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/id_removeB"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:focusable="false"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="@+id/id_symbol"
        app:layout_constraintStart_toEndOf="@+id/id_symbol"
        app:layout_constraintTop_toTopOf="@+id/id_symbol"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>